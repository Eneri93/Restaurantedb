<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comidita"
    tools:context=".utilidades.NuevoRestauranteActivity">


    <TextView
        android:id="@+id/txt_nuevo_restaurante"
        android:layout_width="267dp"
        android:layout_height="72dp"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="Nuevo Restaurante"
        android:textColor="#500303"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <EditText
        android:id="@+id/edt_nombre_nuevo_restaurante"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="Nuevo Restaurante"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_nuevoRest_facturacion"
        app:layout_constraintEnd_toEndOf="@+id/txt_nuevo_restaurante"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/txt_nuevo_restaurante"
        app:layout_constraintTop_toBottomOf="@+id/txt_nuevo_restaurante"
        app:layout_constraintVertical_bias="0.292" />

    <EditText
        android:id="@+id/edt_nuevoRest_facturacion"
        android:layout_width="258dp"
        android:layout_height="56dp"
        android:layout_marginBottom="368dp"
        android:ems="10"
        android:hint="Facturacion"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_nombre_nuevo_restaurante"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_nombre_nuevo_restaurante" />

    <Spinner
        android:id="@+id/sp_nuevoRest_fraqn"
        android:layout_width="276dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edt_nuevoRest_facturacion"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="@+id/edt_nuevoRest_facturacion"
        app:layout_constraintTop_toBottomOf="@+id/edt_nuevoRest_facturacion"
        app:layout_constraintVertical_bias="0.161"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/bt_registrar_nueva_franquicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:onClick="insertarRestaurante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sp_nuevoRest_fraqn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sp_nuevoRest_fraqn"
        app:layout_constraintTop_toBottomOf="@+id/sp_nuevoRest_fraqn"
        app:layout_constraintVertical_bias="0.27" />
</androidx.constraintlayout.widget.ConstraintLayout>