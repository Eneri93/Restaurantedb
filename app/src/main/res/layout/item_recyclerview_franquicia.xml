<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="logo"
            app:srcCompat="@drawable/restaurante" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_rv_nombreR"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nombre Restaurante"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_rv_facturacion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Facturacion" />

            <TextView
                android:id="@+id/txt_rv_franquicia"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Franquicia" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>